{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/**/*", "src/node_modules/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "static/*"],
  "compilerOptions": {
    "target": "es2017",
    "lib": ["esNext", "dom"],
    "module": "esNext",
    "noEmit": false,
    "strict": true,
    "moduleResolution": "node"
  }
}
